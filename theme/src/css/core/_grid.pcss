.container {
  @apply mx-auto overflow-x-hidden;
  max-width: $site-max-width;
  padding-left: $site-offset;
  padding-right: $site-offset;
  &.show-all {
    @apply overflow-visible;
  }
}

.section {
  padding-top: $section-offset-mobile;
  padding-bottom: $section-offset-mobile;

  &.pt-0 {
    @apply pt-0;
  }
}

.row {
  @apply flex;
  margin-left: calc($gutter-mobile / -2);
  margin-right: calc($gutter-mobile / -2);
}

.col {
  padding-left: calc($gutter-mobile / 2);
  padding-right: calc($gutter-mobile / 2);
}

.px-col {
  padding-left: calc((((100vw - ($site-offset * 2)) + $gutter-mobile) * (1 / 12)) - $gutter-mobile);
  padding-right: calc((((100vw - ($site-offset * 2)) + $gutter-mobile) * (1 / 12)) - $gutter-mobile);
}

@screen md {
  .container {
  @apply mx-auto overflow-x-hidden;
  max-width: $site-max-width;
  padding-left: $site-offset-tablet;
  padding-right: $site-offset-tablet;
