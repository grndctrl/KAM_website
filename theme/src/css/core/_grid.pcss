  }

  .px-col {
    padding-left: calc((((100vw - ($site-offset-tablet * 2)) + $gutter-tablet) * (1 / 12)) - $gutter-tablet);
    padding-right: calc((((100vw - ($site-offset-tablet * 2)) + $gutter-tablet) * (1 / 12)) - $gutter-tablet);
  }
}

@screen lg {
  .container {
  @apply mx-auto overflow-x-hidden;
  max-width: $site-max-width;
