  .swiper-bullets {
    @apply hidden;
  }
  .swiper-prev,
  .swiper-next {
    @apply absolute h-full top-0 flex items-center cursor-pointer;
    width: calc((100vw - (((min(100vw, $site-max-width) - (2 * $site-offset)) + $gutter) * (8 / 12)) - $gutter) / 2);
    transition: opacity $short ease;
    z-index: +1;

    &.swiper-button-disabled {
      @apply opacity-0;
    }
  }

  .swiper-extended {
    .swiper-slide {
      width: calc((((min(100vw, $site-max-width) - (2 * $site-offset)) + $gutter) * (5 / 12)) - $gutter);
    }

    .swiper-prev,
    .swiper-next {
      @apply block items-start;
      margin-bottom: $section-offset;
      padding-top: calc(((((min(100vw, $site-max-width) - (2 * $site-offset)) + $gutter) * (5 / 12)) - $gutter) * 0.31 - 30px);
      width: calc((100vw - (((min(100vw, $site-max-width) - (2 * $site-offset)) + $gutter) * (10 / 12)) - $gutter) / 2);
      transition: opacity $short ease;
    }
  }
}

.quote-symbol {
  font-size: 110px;
  font-family: GTAmerica-CompressedBlack;
}