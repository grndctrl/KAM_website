    .swiper-container {
      @apply w-8/12 mx-auto;
    }

    .swiper-slide {
      @apply w-full;
    }
  }

  .swiper-slide {
    width: calc(((min(100vw, $site-max-width) - (2 * $site-offset) + $gutter) * (8 / 12)) - $gutter);
  }

  .fietsen-swiper {
    .placeholder {
      z-index: -1000;
