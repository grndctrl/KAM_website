<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" {{ site.language_attributes }}>
  <!--<![endif]-->
  <head>
    <meta charset="{{ site.charset }}"/>

    <title>
      {% if wp_title %}
        {{ wp_title ~ ' | ' ~ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>

    {% include "core/metadata.twig" %}

    {{function('wp_head')}}

    {% block head %}{% endblock %}
  </head>

  <body class="{{ body_class|join(' ') }}">
  
    <div id="core"></div>

    <div id="splash-screen" class="bg-blue text-white fixed inset-0 flex items-center" style="z-index: 9999">
      <div class="container">
        <div class="row">
          <div class="col w-8/12 lg:2-2/12 mx-auto logo-splash">
            {% include "svg/logo-splash.twig" %}
          </div>
        </div>
      </div>
    </div>

    {% block header %}
      {% include "layout/header.twig" %}
    {% endblock %}

    {# <div class="main-wrapper z-10" data-barba="wrapper">
      <main class="main {{ main_class|join(' ') }}" data-barba="container" data-barba-namespace="{{ post.post_name }}">
        {% block main %}{% endblock %}

        {% block scripts %}{% endblock %}
      </main>
    </div> #}

    <main id="swup" class="transition-fade {{ main_class|join(' ') }} page-{{ post.slug }}">
      {% block main %}{% endblock %}
      
      <div class="pb-8 lg:pb-16 {{ spacer_class|join(' ') }}"></div>

      {% block scripts %}{% endblock %}
    </main>

    {% block footer %}
      {% include "layout/footer.twig" %}
    {% endblock %}
    
    {{ function('wp_footer') }}

  </body>
</html>