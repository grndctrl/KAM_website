<footer id="footer" class="pt-16 pb-8 footer-main font-footer bg-blue text-white">
  <div class="container">

    {% block footer %}

  <div class="row pb-8 md:pb-0 lg:pb-12">
  
      <div class="col w-10/12 mx-auto flex flex-wrap justify-between">
        <div class="w-full md:w-6/12 lg:w-auto flex-shrink pb-8 md:pb-10">
          <p class="text-center">
            {{ global_contact.address|nl2br }}
          </p>
        </div>
        <div class="w-full md:w-6/12 lg:w-auto flex-shrink pb-8 md:pb-10">
          <p class="text-center">
            Contact<br>
            {{ global_contact.phone }}<br>
            <a href="mailto:{{ global_contact.email }}">{{ global_contact.email }}</a>
          </p>
        </div>
        <div class="w-full md:w-6/12 lg:w-auto flex-shrink pb-8 md:pb-10">
          <p class="text-center">
            Follow us<br>
            <a href="{{ global_contact.instagram }}">instagram</a><br>
            <a href="{{ global_contact.facebook }}">facebook</a>
          </p>
        </div>
        <div class="w-full md:w-6/12 lg:w-auto flex-shrink pb-8 md:pb-10">
          <p class="text-center">
            {{ global_contact.opening_hours|nl2br }}
          </p>
        </div>
      </div>

      </div>

      <div class="row">
        <div class="col lg:ml-1/12">
          <p class="font-small">
            &copy;
            {{ "now"|date("Y") }}
            Kamu Breda
          </p>
        </div>
      </div>

    {% endblock %}

  </div>
</footer>
