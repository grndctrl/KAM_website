{% if fields.category[0].slug == "fietsen" %}
  {% set category = "Fiets" %}
  {% set section_class = ['text-blue'] %}
{% else %}
  {% set category = "Koffie" %}
  {% set section_class = ['text-orange'] %}
{% endif %}

<section class="pt-16 pb-8 lg:pb-16 {{ section_class|join(' ') }} bg-white">
  <div class="container">

    <div class="row">
      <div class="col w-full md:w-10/12 mx-auto">

        <h4 class="font-h4 overflow-hidden">
          {{ category }}
          verhalen
        </h4>

      </div>
    </div>

  </div>
</section>
<section class="swiper-extended  {{ section_class|join(' ') }} bg-white">

  <div class="w-full overflow-x-hidden">

    <div class="swiper swiper-container" swiper-space-between="false" swiper-allow-touch-move="true" swiper-center="false" swiper-slides-per-view="auto" swiper-offset="true" swiper-effect="slide" swiper-loop="false">
      <div class="swiper-wrapper section pt-0">

        {% for verhaal in verhalen %}

          {% if verhaal.category.term_taxonomy_id == fields.category[0].term_id %}

            <div class="swiper-slide relative">
              {% include "components/image.twig" with {
                image : verhaal.thumbnail,
                size: "landscape",
                ratio: "strict"
              } %}
              <div class="flex flex-col">
                <div class="font-label font-normal pt-3 lg:pt-6 pb-2 lg:pb-3">
                  {{ verhaal.post_date|date('n,Y')|format_date }}
                </div>
                <div class="font-h4 hidden lg:block">
                  <a href="{{ verhaal.link }}" class="">
                    {{ verhaal.title }}
                  </a>
                </div>
                <div class="font-h4 lg:hidden">
                  {{ verhaal.title }}
                </div>
                <div class="pt-4 font-label lg:hidden">
                  <a href="{{ verhaal.link }}" class="anim-underline anim-underline-out">
                    LEES
                  </a>
                </div>
              </div>
            </div>

          {% endif %}

        {% endfor %}

      </div>

      <div class="swiper-prev focus:outline-none">
        {% include "components/button-prev.twig" %}
      </div>
      <div class="swiper-next focus:outline-none">
        {% include "components/button-next.twig" %}
      </div>

      <div class="swiper-bullets"></div>
    </div>

  </div>
</section>